{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["src/**"],
      "outputs": ["out/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["src/**", "test/**"],
      "dependsOn": ["^build"]
    },
    "doc": {
      "inputs": ["src/**"],
      "outputs": ["docs/**"]
    }
  }
}
