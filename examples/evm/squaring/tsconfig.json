{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}