{
  "name": "@modules/root",
  "private": true,
  "scripts": {
    "prepare": "pnpm run \"/^prepare:.*/\"",
    "prepare:goimports": "go install golang.org/x/tools/cmd/goimports@latest",
    "prepare:gotestsum": "go install gotest.tools/gotestsum@latest",
    "prepare:modtidy": "go mod tidy"
  },
  "lint-staged": {
    "*.go": [
      "goimports -w -l ."
    ],
    "package.json": [
      "prettier --write"
    ]
  }
}
