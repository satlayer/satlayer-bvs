{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "docker:build": {
      "inputs": ["Dockerfile", "optimizer.sh"],
      "outputs": ["docker.tar"]
    },
    "docker:load": {
      "inputs": ["docker.tar"],
      "dependsOn": ["docker:build"]
    },
    "build": {
      "dependsOn": ["docker:load"]
    }
  }
}
