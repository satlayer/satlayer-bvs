{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**", "**.go"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**", "**.go"],
      "dependsOn": ["^build"],
      "env": ["GOTESTSUM_JUNITFILE"]
    },
    "eslint": {
      "cache": false,
      "outputLogs": "errors-only"
    },
    "cargo:publish": {
      "cache": false
    }
  }
}
