{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "clean": {
      "cache": false
    },
    "generate:schema": {
      "inputs": ["src/**"],
      "outputs": ["schema/**"]
    },
    "build": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**", "**.go"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:wasm": {
      "inputs": ["src/**"],
      "outputs": ["artifacts/**"],
      "dependsOn": ["@packages/cosmwasm-optimizer#build"]
    },
    "test": {
      "inputs": ["tsconfig.json", "tsconfig.build.json", "src/**"],
      "dependsOn": ["^build"],
      "env": ["GOTESTSUM_JUNITFILE"]
    },
    "eslint": {
      "cache": false,
      "outputLogs": "errors-only"
    }
  }
}
